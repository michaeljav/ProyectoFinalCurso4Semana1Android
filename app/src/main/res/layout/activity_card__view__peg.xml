<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"

    card_view:cardCornerRadius="@dimen/corner_cv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPhotoMain"
            android:layout_width="match_parent"
            android:layout_height="607px"
            android:background="@drawable/_curso3"
            android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPhotoMain"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgBoneWhite"
                        android:layout_width="22dp"
                        android:layout_height="40px"
                        android:layout_marginLeft="@dimen/marginRightBone"
                        android:layout_marginRight="@dimen/marginRightBone"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dog_bone_white__52"
                        android:paddingTop="100px"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/textBoneWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOG"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textBoneYellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/marginRightBone"/>

                    <ImageView
                        android:id="@+id/imgBoneYellow"
                        android:layout_gravity="right"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_marginRight="@dimen/marginRightBone"
                        android:background="@drawable/dog_bone_yellow_96"
                        android:scaleType="centerCrop" />


                </LinearLayout>


            </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>